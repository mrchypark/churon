#!/bin/sh
# Configure script for churon package
# Delegates to R script for robust platform detection and downloading

set -e

echo "Configuring churon package..."

# Use R's own script to find Rscript - follows R CMD config guidelines
# This ensures we use the correct Rscript for the current R installation
if [ -n "$R_HOME" ] && [ -f "$R_HOME/bin/Rscript" ]; then
    RSCRIPT="$R_HOME/bin/Rscript"
else
    # Fallback: find Rscript in PATH
    RSCRIPT="`R RHOME`/bin/Rscript"
fi

echo "Running tools/download-ort.R..."
"$RSCRIPT" tools/download-ort.R

exit 0
